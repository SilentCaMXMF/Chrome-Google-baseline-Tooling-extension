{
  "manifest_version": 3,
  "name": "Baseline Checker for Cloud IDEs",
  "version": "1.1.0",
  "description": "Check web features against Baseline data with inline warnings and documentation links",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.github.dev/*",
    "https://*.codespaces.github.com/*",
    "https://*.gitpod.io/*",
    "https://*.codesandbox.io/*",
    "https://*.stackblitz.com/*",
    "https://replit.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Baseline Checker - Click to analyze current file"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/content.js"],
      "css": ["content-scripts/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/baseline-features.json",
        "icons/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
